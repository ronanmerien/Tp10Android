<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.admin.tp10android.Main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignLeft="@+id/textView"
    android:useDefaultMargins="false"
    android:alignmentMode="alignBounds"
    android:background="@color/background"
    >

        <GridLayout android:layout_row="0" android:layout_column="0"
            android:layout_width="match_parent">
                <TextView
                    android:id="@+id/pile1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_column="0"
                    android:layout_row="0"/>

                <TextView
                    android:id="@+id/pile2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_column="0"
                    android:layout_row="1" />

                <TextView
                    android:id="@+id/pile3"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_column="0"
                    android:layout_row="2" />

                <TextView
                    android:id="@+id/pile4"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_column="0"
                    android:layout_row="3" />

                <TextView
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_above="@+id/button2"

                    android:layout_centerHorizontal="true"
                    android:layout_column="0"
                    android:layout_row="4"

                    android:background="@color/grey"
                    android:textAlignment="center"
                    android:textSize="20dp" />
        </GridLayout>

        <GridLayout android:layout_row="1" android:layout_column="0">
                <Button
                    android:id="@+id/button0"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignLeft="@+id/button8"
                    android:layout_below="@+id/button8"

                    android:layout_column="1"

                    android:layout_marginTop="10dp"
                    android:layout_row="5"
                    android:background="@drawable/layout"
                    android:onClick="numberIn0"
                    android:text="0" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/button7"
                    android:layout_column="1"

                    android:layout_marginLeft="10dp"

                    android:layout_row="4"
                    android:layout_toRightOf="@+id/button7"
                    android:background="@drawable/layout"
                    android:onClick="numberIn8"
                    android:text="8" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignLeft="@+id/button4"
                    android:layout_below="@+id/button4"

                    android:layout_column="0"

                    android:layout_marginTop="10dp"
                    android:layout_row="4"
                    android:background="@drawable/layout"
                    android:onClick="numberIn7"
                    android:text="7" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/button8"
                    android:layout_column="2"

                    android:layout_marginLeft="10dp"

                    android:layout_row="4"
                    android:layout_toRightOf="@+id/button8"
                    android:background="@drawable/layout"
                    android:onClick="numberIn9"
                    android:text="9" />

                <Button
                    android:id="@+id/buttonTimes"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/button9"
                    android:layout_column="3"

                    android:layout_marginLeft="10dp"

                    android:layout_row="4"
                    android:layout_toRightOf="@+id/button9"
                    android:background="@drawable/layout"
                    android:onClick="inTimes"
                    android:text="*" />

                <Button
                    android:id="@+id/buttonExe"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignLeft="@+id/buttonSwap"
                    android:layout_below="@+id/buttonSwap"

                    android:layout_column="4"

                    android:layout_marginTop="10dp"
                    android:layout_row="5"
                    android:background="@drawable/layout"
                    android:onClick="inExe"
                    android:text="exe" />

                <Button
                    android:id="@+id/buttonSwap"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/buttonTimes"
                    android:layout_column="4"

                    android:layout_marginLeft="10dp"

                    android:layout_row="4"
                    android:layout_toRightOf="@+id/buttonTimes"
                    android:background="@drawable/layout"
                    android:onClick="inSwap"
                    android:text="swap" />

                <Button
                    android:id="@+id/buttonMoins"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/button6"
                    android:layout_column="3"

                    android:layout_marginLeft="10dp"

                    android:layout_row="3"
                    android:layout_toRightOf="@+id/button6"
                    android:background="@drawable/layout"
                    android:onClick="inMoins"
                    android:text="-" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/button5"
                    android:layout_column="2"

                    android:layout_marginLeft="10dp"

                    android:layout_row="3"
                    android:layout_toRightOf="@+id/button5"
                    android:background="@drawable/layout"
                    android:onClick="numberIn6"
                    android:text="6" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/button4"
                    android:layout_column="1"

                    android:layout_marginLeft="10dp"

                    android:layout_row="3"
                    android:layout_toRightOf="@+id/button4"
                    android:background="@drawable/layout"
                    android:onClick="numberIn5"
                    android:text="5" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignLeft="@+id/button1"
                    android:layout_below="@+id/button1"

                    android:layout_column="0"

                    android:layout_marginTop="10dp"
                    android:layout_row="3"
                    android:background="@drawable/layout"
                    android:onClick="numberIn4"
                    android:text="4" />

                <Button
                    android:id="@+id/buttoPop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/buttonMoins"
                    android:layout_column="4"

                    android:layout_marginLeft="10dp"

                    android:layout_row="3"
                    android:layout_toRightOf="@+id/buttonMoins"
                    android:background="@drawable/layout"
                    android:onClick="inPop"
                    android:text="pop" />

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/buttonPlus"
                    android:layout_column="4"

                    android:layout_marginLeft="10dp"

                    android:layout_row="2"
                    android:layout_toRightOf="@+id/buttonPlus"
                    android:background="@drawable/layout"
                    android:onClick="inClear"
                    android:text="clear" />

                <Button
                    android:id="@+id/buttonPlus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/button3"
                    android:layout_column="3"

                    android:layout_marginLeft="10dp"

                    android:layout_row="2"
                    android:layout_toRightOf="@+id/button3"
                    android:background="@drawable/layout"
                    android:onClick="inPlus"
                    android:text="+" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/button2"
                    android:layout_column="2"

                    android:layout_marginLeft="10dp"

                    android:layout_row="2"
                    android:layout_toRightOf="@+id/button2"
                    android:background="@drawable/layout"
                    android:onClick="numberIn3"
                    android:text="3" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/button1"
                    android:layout_column="1"

                    android:layout_marginLeft="10dp"

                    android:layout_row="2"
                    android:layout_toRightOf="@+id/button1"
                    android:background="@drawable/layout"
                    android:onClick="numberIn2"
                    android:text="2" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"

                    android:layout_row="2"

                    android:background="@drawable/layout"
                    android:onClick="numberIn1"
                    android:text="1" />

        </GridLayout>

</GridLayout>
